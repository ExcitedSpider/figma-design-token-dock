{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["ES5", "ES2015", "ES2016", "DOM"],
    "baseUrl": "./",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "ui": ["src/ui"],
      "ui/*": ["src/ui/*"]
    }
  }
}
